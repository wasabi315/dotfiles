Config
    { font = "xft:Liga Iosevka Custom-12:medium, M+ 1mn-12"
    , bgColor = "#2e3440"
    , fgColor = "#dee8e9"
    , lowerOnStart = False
    , allDesktops = True
    , persistent = True
    , commands =
        [ Run Cpu
            [ "-L", "30"
            , "-l", "#a3be8c"
            , "-n", "#ebcb8b"
            , "-H", "70"
            , "-h", "#bf616a"
            , "-t", "CPU <bar>"
            , "-b", "·"
            , "-f", "●"
            , "-W", "5"
            ]
            10
        , Run Memory
            [ "-L", "30"
            , "-l", "#a3be8c"
            , "-n", "#ebcb8b"
            , "-H", "70"
            , "-h", "#bf616a"
            , "-t", "MEM <usedbar>"
            , "-b", "·"
            , "-f", "●"
            , "-W", "5"
            ]
            10
        , Run DiskU
            [ ("/", "DISK <usedbar>") ]
            [ "-L", "30"
            , "-l", "#a3be8c"
            , "-n", "#ebcb8b"
            , "-H", "70"
            , "-h", "#bf616a"
            , "-b", "·"
            , "-f", "●"
            , "-W", "5"
            ]
            20
        , Run StdinReader
        ]
    , template = "%StdinReader% }{ %cpu%   %memory%   %disku%  "
    }

-- vim: ft=haskell
