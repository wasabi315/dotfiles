Config
    { font = "xft:Iosevka Custom:size=12:style=medium"
    , bgColor = "#2e3440"
    , fgColor = "#dee8e9"
    , lowerOnStart = False
    , allDesktops = True
    , persistent = True
    , commands =
        [ Run Cpu
            [ "-L", "30"
            , "-l", "#a3be8c"
            , "-n", "#ebcb8b"
            , "-H", "70"
            , "-h", "#bf616a"
            , "-t", "cpu <bar>"
            , "-b", "·"
            , "-f", "●"
            , "-W", "5"
            ]
            10
        , Run Memory
            [ "-L", "30"
            , "-l", "#a3be8c"
            , "-n", "#ebcb8b"
            , "-H", "70"
            , "-h", "#bf616a"
            , "-t", "mem <usedbar>"
            , "-b", "·"
            , "-f", "●"
            , "-W", "5"
            ]
            10
        , Run DiskU
            [ ("/", "disk <usedbar>") ]
            [ "-L", "30"
            , "-l", "#a3be8c"
            , "-n", "#ebcb8b"
            , "-H", "70"
            , "-h", "#bf616a"
            , "-b", "·"
            , "-f", "●"
            , "-W", "5"
            ]
            20
        , Run Date "%H:%M" "date" 10
        , Run StdinReader
        ]
    , sepChar  = "%"
    , alignSep = "}{"
    , template = "%StdinReader% } %date% { %cpu%   %memory%   %disku%  "
    }

-- vim: ft=haskell
