#!/bin/bash

##################################################
#                                                #
#     Randomly colored Manjaro Linux logo        #
#                                                #
#     (c) 2020 Satoshi Takimoto                  #
#                                                #
##################################################

declare -a colors=(
    "\e[30m"
    "\e[31m"
    "\e[32m"
    "\e[33m"
    "\e[34m"
    "\e[35m"
    "\e[36m"
    "\e[37m"
)


declare -a picture=(
    "██████████████████..████████"
    "██████████████████..████████"
    "██████████████████..████████"
    "██████████████████..████████"
    "████████............████████"
    "████████..████████..████████"
    "████████..████████..████████"
    "████████..████████..████████"
    "████████..████████..████████"
    "████████..████████..████████"
    "████████..████████..████████"
    "████████..████████..████████"
    "████████..████████..████████"
    "████████..████████..████████"
    "████████..████████..████████"
)


printf "\n\n"
for line in ${picture[@]}; do

    # Insert random color between characters
    # TODO: speed up
    colored=""
    for span in $(echo ${line} | sed 's/./& /g'); do
        i=$(( (RANDOM % 7) + 1 ))
        colored=${colored}${colors[i]}${span}
    done

    printf "    ${colored}\n"
done
printf "\e[0m\n\n"

