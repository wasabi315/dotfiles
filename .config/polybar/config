[colors]
background =       #00000000
foreground =       #95a5bd
foreground-alt =   #4C566A
primary =          #e27878
secondary =        #e60053
alert =            #E27878

[bar/top]
width = 100%
height = 30
offset-x = 0%
offset-y = 0%
radius = 0
fixed-center = true
bottom = false

background = ${colors.background}
foreground = ${colors.foreground}

